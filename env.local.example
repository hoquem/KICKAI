# KICKAI Local Development Environment
# Copy this to .env and configure with your actual values

# Environment Configuration
ENVIRONMENT=development
RAILWAY_ENVIRONMENT=development

# AI Configuration for Local Development
AI_PROVIDER=ollama
AI_MODEL_NAME=llama3.1:8b-instruct-q4_0
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TIMEOUT=60

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Firebase Configuration (for local development)
# You can use a test Firebase project or mock data
FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"kickai-dev","private_key_id":"test","private_key":"-----BEGIN PRIVATE KEY-----\nMOCK_KEY_FOR_DEVELOPMENT\n-----END PRIVATE KEY-----\n","client_email":"test@kickai-dev.iam.gserviceaccount.com","client_id":"123456789","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/test%40kickai-dev.iam.gserviceaccount.com"}

# Telegram Configuration (optional for local testing)
# TELEGRAM_BOT_TOKEN=your_test_bot_token_here
# TELEGRAM_WEBHOOK_URL=your_webhook_url_here

# Logging Configuration
LOG_LEVEL=INFO

# Port Configuration
PORT=8080 