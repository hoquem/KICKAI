[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    migrations,
    node_modules

# Ignore whitespace before ':' (E203), line break before binary operator (W503), and line too long (E501)
extend-ignore = E203, W503, E501

# Import rules
per-file-ignores =
    # Allow relative imports in __init__.py files
    __init__.py: F401
    # Allow unused imports in test files for fixtures
    tests/: F401
    # Allow unused imports in feature modules for exports
    src/features/*/__init__.py: F401

# Import sorting
import-order-style = google 