{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt",
    "watchPatterns": [
      "src/**/*",
      "requirements*.txt",
      "railway.json"
    ]
  },
  "deploy": {
    "startCommand": "python scripts/deploy_with_firebase.py && python railway_main.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "TELEGRAM_BOT_TOKEN": "${TELEGRAM_BOT_TOKEN_PROD}",
        "FIREBASE_CREDENTIALS": "${FIREBASE_CREDENTIALS_PROD}",
        "GOOGLE_AI_API_KEY": "${GOOGLE_AI_API_KEY_PROD}",
        "RAILWAY_ENVIRONMENT": "production"
      }
    },
    "staging": {
      "variables": {
        "ENVIRONMENT": "staging",
        "LOG_LEVEL": "DEBUG",
        "TELEGRAM_BOT_TOKEN": "${TELEGRAM_BOT_TOKEN_STAGING}",
        "FIREBASE_CREDENTIALS": "${FIREBASE_CREDENTIALS_STAGING}",
        "GOOGLE_AI_API_KEY": "${GOOGLE_AI_API_KEY_STAGING}",
        "RAILWAY_ENVIRONMENT": "staging"
      }
    },
    "testing": {
      "variables": {
        "ENVIRONMENT": "testing",
        "LOG_LEVEL": "DEBUG",
        "TELEGRAM_BOT_TOKEN": "${TELEGRAM_BOT_TOKEN_TESTING}",
        "FIREBASE_CREDENTIALS": "${FIREBASE_CREDENTIALS_TESTING}",
        "GOOGLE_AI_API_KEY": "${GOOGLE_AI_API_KEY_TESTING}",
        "RAILWAY_ENVIRONMENT": "testing"
      }
    }
  },
  "services": [
    {
      "name": "kickai-production",
      "environment": "production",
      "domains": ["kickai-production.railway.app"],
      "healthcheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      }
    },
    {
      "name": "kickai-staging",
      "environment": "staging",
      "domains": ["kickai-staging.railway.app"],
      "healthcheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      }
    },
    {
      "name": "kickai-testing",
      "environment": "testing",
      "domains": ["kickai-testing.railway.app"],
      "healthcheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      }
    }
  ],
  "monitoring": {
    "metrics": {
      "enabled": true,
      "interval": 60
    },
    "logs": {
      "enabled": true,
      "retention": "7d"
    }
  },
  "scaling": {
    "minInstances": 1,
    "maxInstances": 3,
    "targetCPUUtilization": 70,
    "targetMemoryUtilization": 80
  },
  "resources": {
    "cpu": "0.5",
    "memory": "512Mi",
    "disk": "1Gi"
  },
  "networking": {
    "ports": [8000],
    "protocol": "http"
  }
} 