# KICKAI Environment Configuration

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here
FIREBASE_CLIENT_ID=your_firebase_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your_firebase_client_cert_url_here

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=your_webhook_url_here

# AI Configuration
# For Production (Railway): Use Google Gemini
# For Local Development: Use Ollama
AI_PROVIDER=ollama  # google_gemini, openai, or ollama
AI_MODEL_NAME=llama3.1:8b-instruct-q4_0  # For Ollama: llama3.1:8b-instruct-q4_0
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TIMEOUT=60

# API Keys (only needed for cloud providers)
GOOGLE_API_KEY=your_google_api_key_here  # Only needed for google_gemini
OPENAI_API_KEY=your_openai_api_key_here  # Required by CrewAI even if using other providers

# Environment Configuration
ENVIRONMENT=development  # development or production
RAILWAY_ENVIRONMENT=production

# Port Configuration
PORT=8080

# Logging Configuration
LOG_LEVEL=INFO 