# KICKAI Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# CRITICAL SECURITY - Invite Link Secret Key
# ============================================================================
# This secret key is used to sign and validate invite links
# Generate a strong random key: openssl rand -hex 32
KICKAI_INVITE_SECRET_KEY=your_secure_random_secret_key_here_minimum_32_characters

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Firebase project ID (REQUIRED)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Firebase credentials - choose ONE method:
# Option 1: Path to Firebase service account credentials file
FIREBASE_CREDENTIALS_FILE=credentials/firebase_credentials_testing.json

# Option 2: Firebase credentials as JSON string (alternative to file)
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key":"...","client_email":"..."}

# ============================================================================
# AI/LLM CONFIGURATION
# ============================================================================
# AI provider (gemini, ollama, openai, mock, huggingface)
AI_PROVIDER=gemini

# AI model name
AI_MODEL_NAME=gemini-1.5-flash

# Google API key for Gemini (REQUIRED for Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API key (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API token (REQUIRED for Hugging Face models and embeddings)
HUGGINGFACE_API_TOKEN=your_huggingface_api_token_here

# Ollama model name (if using Ollama)
OLLAMA_MODEL=llama3.2:3b

# AI temperature setting (0.0-1.0)
AI_TEMPERATURE=0.7

# AI timeout in seconds
AI_TIMEOUT=120

# AI max retries
AI_MAX_RETRIES=5

# ============================================================================
# RATE LIMITING CONFIGURATION (Groq Free Tier)
# ============================================================================
# Tokens per minute rate limit (Groq free tier: 6000)
AI_RATE_LIMIT_TPM=6000

# Delay in seconds when rate limit is hit
AI_RATE_LIMIT_RETRY_DELAY=5.0

# Maximum retries for rate limit errors
AI_RATE_LIMIT_MAX_RETRIES=3

# Backoff multiplier for rate limit retries
AI_RATE_LIMIT_BACKOFF_MULTIPLIER=2.0

# ============================================================================
# CREWAI MEMORY CONFIGURATION
# ============================================================================
# Enable CrewAI memory system
CREWAI_MEMORY_ENABLED=true

# CrewAI memory embedding provider (huggingface, google, openai)
# RECOMMENDED: huggingface - consistent with system's LLM architecture
CREWAI_MEMORY_PROVIDER=huggingface

# CrewAI memory embedding model (Hugging Face sentence-transformers)
# RECOMMENDED: sentence-transformers/all-MiniLM-L6-v2 (fast, efficient, 86M+ downloads)
CREWAI_MEMORY_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Max memory items per crew
CREWAI_MEMORY_MAX_ITEMS=1000

# ============================================================================
# PAYMENT CONFIGURATION
# ============================================================================
# Collectiv API key (for payment processing)
COLLECTIV_API_KEY=your_collectiv_api_key_here

# Collectiv base URL
COLLECTIV_BASE_URL=https://api.collectiv.com

# Collectiv webhook secret
COLLECTIV_WEBHOOK_SECRET=your_collectiv_webhook_secret_here

# Enable payment system
PAYMENT_ENABLED=false

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=true

# Enable verbose logging
VERBOSE_LOGGING=false

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================
# Admin session string for E2E testing
ADMIN_SESSION_STRING=your_admin_session_string_here

# Player session string for E2E testing
PLAYER_SESSION_STRING=your_player_session_string_here

# Testing bot token for database seeding (REQUIRED for testing)
# SECURITY: Never commit actual bot tokens to version control
KICKAI_TESTING_BOT_TOKEN=your_testing_bot_token_here

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# JWT secret key (REQUIRED)
JWT_SECRET=your_jwt_secret_key_here

# Session timeout in seconds
SESSION_TIMEOUT=3600

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
# Cache TTL in seconds
CACHE_TTL=300

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Retry attempts
RETRY_ATTEMPTS=3

# Retry delay in seconds
RETRY_DELAY=1.0 