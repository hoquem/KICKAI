# KICKAI Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# CRITICAL SECURITY - Invite Link Secret Key
# ============================================================================
# This secret key is used to sign and validate invite links
# Generate a strong random key: openssl rand -hex 32
KICKAI_INVITE_SECRET_KEY=your_secure_random_secret_key_here_minimum_32_characters

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Path to your Firebase service account credentials file
FIREBASE_CREDENTIALS_FILE=credentials/firebase_credentials_testing.json

# Firebase project ID
FIREBASE_PROJECT_ID=your-firebase-project-id

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================
# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Main chat ID (where players interact)
TELEGRAM_MAIN_CHAT_ID=-1001234567890

# Leadership chat ID (where admins manage the team)
TELEGRAM_LEADERSHIP_CHAT_ID=-1001234567891

# ============================================================================
# TEAM CONFIGURATION
# ============================================================================
# Default team ID (used for testing)
TEAM_ID=KTI

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Set to 'true' for development mode
DEVELOPMENT_MODE=true

# Skip full system validation during startup (for faster development)
SKIP_FULL_SYSTEM_VALIDATION=false

# ============================================================================
# E2E TESTING CONFIGURATION
# ============================================================================
# Admin session string for E2E testing
ADMIN_SESSION_STRING=your_admin_session_string_here

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
# LLM provider (ollama, gemini, openai)
LLM_PROVIDER=ollama

# Ollama model name (if using Ollama)
OLLAMA_MODEL=llama3.2:3b

# Google Gemini API key (if using Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API key (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
# Cache TTL in seconds
CACHE_TTL=300

# Maximum concurrent operations
MAX_CONCURRENT_OPERATIONS=10

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Rate limiting - requests per minute
RATE_LIMIT_PER_MINUTE=60

# Session timeout in seconds
SESSION_TIMEOUT=3600

# ============================================================================
# MONITORING AND HEALTH CHECKS
# ============================================================================
# Enable health checks
ENABLE_HEALTH_CHECKS=true

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=300

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================
# Environment (local, testing, staging, production)
ENVIRONMENT=local

# Enable debug mode
DEBUG=true

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
# Firestore collection prefix
FIRESTORE_COLLECTION_PREFIX=kickai_

# Enable database connection pooling
ENABLE_CONNECTION_POOLING=true

# Connection pool size
CONNECTION_POOL_SIZE=10

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
# Enable notifications
ENABLE_NOTIFICATIONS=true

# Notification retry attempts
NOTIFICATION_RETRY_ATTEMPTS=3

# Notification retry delay in seconds
NOTIFICATION_RETRY_DELAY=5 