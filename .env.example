# KICKAI Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================

# Bot Token from @BotFather (format: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot username (without @)
TELEGRAM_BOT_USERNAME=your_bot_username_here

# Chat IDs (get these from your Telegram chats)
TELEGRAM_MAIN_CHAT_ID=-1001234567890
TELEGRAM_LEADERSHIP_CHAT_ID=-1001234567891

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase project ID
FIRESTORE_PROJECT_ID=your-firebase-project-id

# Path to Firebase credentials JSON file
FIREBASE_CREDENTIALS_FILE=./credentials/firebase_credentials.json

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# AI Provider (google_gemini, openai, ollama)
AI_PROVIDER=google_gemini

# Google API Key (for Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Name
AI_MODEL_NAME=gemini-pro

# =============================================================================
# TEAM CONFIGURATION
# =============================================================================

# Default Team ID
DEFAULT_TEAM_ID=KAI

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment (development, production, testing)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Payment system (true/false)
PAYMENT_ENABLED=false

# Collectiv API key (if payment enabled)
COLLECTIV_API_KEY=your_collectiv_api_key_here

# =============================================================================
# TESTING CONFIGURATION (for .env.test)
# =============================================================================

# Test mode
TEST_MODE=true

# Test timeout (seconds)
TEST_TIMEOUT=30

# Test max retries
TEST_MAX_RETRIES=3

# Test parallel execution
TEST_PARALLEL=false

# Test log level
TEST_LOG_LEVEL=INFO

# Test team ID
TEST_TEAM_ID=test-team-123

# Test user ID
TEST_USER_ID=test_user_123

# Test chat ID
TEST_CHAT_ID=test_chat_456

# Admin session string for testing (generated by setup_telegram_credentials.py)
ADMIN_SESSION_STRING=your_admin_session_string_here

# Player session string for testing (can be same as admin)
PLAYER_SESSION_STRING=your_player_session_string_here
